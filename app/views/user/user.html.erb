<div class="wrapper">

    <div class="users">
        <div class="user_group">
            <div class="user_avatar">
                <%= image_tag "#{@user.photo}", class:"avatar" %>
            </div>
            <div class="user_info">
                <div class="user_name">
                    <%= @user.name %>
                </div>
                <div class="posts_counter">
                    <span class="spacer">Number of posts: </span>
                    <%= @user.posts_counter%>
                </div>
            </div>
        </div>
    </div>

    <div class="bio">
        <div>
            <%= @user.bio %> 
        </div>
    </div>

    <div class="posts">
        <% @posts.each do |post|%>
            <div class="post">
                <div class="post_title">
                    <%= post.title %><br/>
                </div>
                <div class="post_body">
                    <%= post.text %><br />
                </div>
                <div class="counters">
                    <div class="comments_counter">
                        <span>comments: </span>
                        <%= post.comments_counter%>
                    </div>
                    <div class="likes_counter">
                        <span>Likes: </span>
                        <%= post.likes_counter%>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <div class="all_posts">
        <%= link_to "See all posts", "/user/#{@user.id}/posts", class:'view_all_posts' %>
    </div>
</div>
