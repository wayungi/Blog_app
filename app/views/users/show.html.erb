<div class="wrapper">
    <%= render 'navbar' %>
    <%= render 'profile', user: @user %>

    <div class="bio">
        <h4>Bio</h4>
        <p><%= @user.bio %></p>
    </div>

    <div class="posts">
        <% @posts.each do |post| %>
            <%= link_to user_post_path(@user, post) do %>
                <%= post.id%>
                <%= render 'post', post: post %>
            <% end %>
        <% end %> 
    </div>

    <div>
        <%= link_to 'See all posts', user_posts_path(@user) %>
    </div>
</div>
